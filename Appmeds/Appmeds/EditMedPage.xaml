<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Appmeds.EditMedPage"
             Title="Edit Medication"
             BackgroundColor="#d0dcc4">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="InnerFrameStyle" TargetType="Frame">
                <Setter Property="BorderColor" Value="DarkOliveGreen" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="Margin" Value="1" />
                <Setter Property="Padding" Value="25,0,25,0" />
                <Setter Property="HeightRequest" Value="60" />
                <Setter Property="CornerRadius" Value="50" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Margin="20">
            <!-- Medication Name Entry -->
            <StackLayout Orientation="Vertical" Margin="0,0,0,10">
                <Label Text="Medication Name" FontSize="16"/>
                <Frame BorderColor="DarkOliveGreen"
           BackgroundColor="Transparent"
           Margin="10"
           Padding="0"
           CornerRadius="50">

                    <Frame Style="{StaticResource InnerFrameStyle}">
                        <Entry TextColor="Black"
                   FontSize="18"
                   Placeholder="Name"
                   PlaceholderColor="DarkOliveGreen"
                    x:Name="MedicationNameEntry"/>
                    </Frame>

                </Frame>
            </StackLayout>

            <!-- Dosage Entry -->
            <StackLayout Orientation="Vertical" Margin="0,0,0,10">
                <Label Text="Dosage (mg)" FontSize="16" />
                <Frame BorderColor="DarkOliveGreen"
           BackgroundColor="Transparent"
           Margin="10"
           Padding="0"
           CornerRadius="50">

                    <Frame Style="{StaticResource InnerFrameStyle}">
                        <Entry TextColor="Black"
                   FontSize="18"
                   Placeholder="Dosage"
                   Keyboard="Numeric"
                   PlaceholderColor="DarkOliveGreen"
                    x:Name="DosageEntry"/>
                    </Frame>

                </Frame>
            </StackLayout>

            <!-- Number of Pills Entry -->
            <StackLayout Orientation="Vertical" Margin="0,0,0,10">
                <Label Text="Number of Pills" FontSize="16" />
                <Frame BorderColor="DarkOliveGreen"
           BackgroundColor="Transparent"
           Margin="10"
           Padding="0"
           CornerRadius="50">

                    <Frame Style="{StaticResource InnerFrameStyle}">
                        <Entry TextColor="Black"
                   FontSize="18"
                   Placeholder="Number"
                   Keyboard="Numeric"
                    PlaceholderColor="DarkOliveGreen"
                    x:Name="NumberOfPillsEntry"/>
                    </Frame>

                </Frame>
            </StackLayout>

            <!-- Time Picker -->
            <StackLayout Orientation="Vertical" Margin="0,0,0,10">
                <Label Text="Time" FontSize="16" />
                <Frame BorderColor="DarkOliveGreen"
           BackgroundColor="Transparent"
           Margin="15"
           Padding="0"
           CornerRadius="50">

                    <Frame Style="{StaticResource InnerFrameStyle}">
                        <TimePicker x:Name="TimePicker" Format="hh:mm" TextColor="Black" />
                    </Frame>

                </Frame>
            </StackLayout>

            <!-- Edit Button -->
            <Button Text="Edit"
                    Clicked="OnEditButtonClicked"
                    BackgroundColor="DarkOliveGreen"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="50"
                    Margin="0,20,0,0"
                    WidthRequest="100" 
                    HeightRequest="50"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
